<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/et_input_json"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:ems="50"
        android:gravity="start|top"
        android:hint="请输入需要测试的json数据，结果请往下面查看"
        android:inputType="textMultiLine"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_data_parser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="解析"
        app:layout_constraintTop_toBottomOf="@+id/et_input_json"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_data_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="清除"
        app:layout_constraintLeft_toRightOf="@+id/btn_data_parser"
        app:layout_constraintTop_toBottomOf="@+id/et_input_json"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_data_parser"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>